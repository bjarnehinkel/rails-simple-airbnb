<div class="d-flex nav-bar align-items-center">
  <p class="site name">Simple AirBnB</p>
  <%= link_to 'Add A Flat', new_flat_path, class: 'btn btn-outline-primary' %>
</div>
<div class="banner" style="background-image: url(<%= @flat.image_url %>);">
</div>
<div class="container d-flex flex-column align-items-center mb-3" style="position: absolute; right: 150px; top: 375px;">
  <div class="details-card">
    <h2><%= @flat.name %></h2>
    <p><%= @flat.address %></p>
  </div>
  <div class="details-card">
    <h2>Some Descriptive Words</h2>
    <p><%= @flat.description %></p>
  </div>
  <div class="details-card">
    <h2>Details</h2>
    <div class="d-flex align-items-center mt-3">
      <div class="d-flex people align-items-center">
        <i class="fas fa-user"></i>
        <p><%= @flat.number_of_guests %></p>
      </div>
      <div class="d-flex price align-items-center">
        <i class="fas fa-euro-sign"></i>
        <p><%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>
  <%= link_to 'Back', flats_path %>
</div>
