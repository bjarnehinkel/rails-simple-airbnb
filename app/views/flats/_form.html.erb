<%= simple_form_for @flat do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :image_url %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
